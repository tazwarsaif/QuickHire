<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <%- include('partials/public') %>
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <div class="heading">
        <h1>
          "Creating seamless opportunities for professionals to connect and
          grow."
        </h1>
        <hr />
        <div class="btns">
          <a href="http://localhost:5000/login">Log in</a>
          <h2>or</h2>
          <a href="http://localhost:5000/signup">Sign up</a>
        </div>
      </div>

      <div class="jobs">
        <% jobs.forEach((job)=>{ %>
        <div class="job">
          <div class="jobpart">
            <div class="job-heading">
              <h2><%= job.title %></h2>
            </div>
            <div class="job-type">
              <h3 class="job-type"><%= job.type %></h3>
            </div>
            <div class="skills"><%= job.skills %></div>
          </div>
          <div class="details">
            <a
              href="http://localhost:5000/home?job_id=<%= job.pid %>"
              class="details-btn detailed"
              >Details</a
            >
            <a href="#" class="details-btn apply">Apply</a>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
